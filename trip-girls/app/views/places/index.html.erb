<div class="container">
  <div class="starter-template">

    <div class="container marketing">

     <div class="row">

       <%@places.each do |place| %>

        <div class="col-lg-4">
         <%= image_tag(place.picture_url, width: 300) if place.picture.present? %>
         <h2><%= place.name %></h2>
         <p>
           <%= link_to "View details", place, class: "btn btn-default", role: "button" %>
           <%= link_to "Edit", edit_place_path(place), class: "btn btn-default", role: "button" %>
           <%= link_to "Destroy", place, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", role: "button" %>

         </p>
        </div>

      <% end %>

    </div>

  </div>
</div>