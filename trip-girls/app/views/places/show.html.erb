<div class="container marketing">

   <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7">
         <h2 class="featurette-heading"><%=@place.name %></h2>
          <p class="lead"><%=@place.description %></p>
        </div>
        <div class="col-md-5">
          <%= image_tag(@place.picture_url, class: "featurette-image img-responsive center-block", width: 700) %> 

         </div>
      </div>

   <hr class="featurette-divider">

   <%= link_to 'Edit', edit_place_path(@place), class: "btn btn-default", role: "button" %>
   <%= link_to 'Back', places_path, class: "btn btn-default", role: "button" %>
   </div>